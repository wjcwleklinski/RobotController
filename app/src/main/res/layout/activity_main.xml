<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/labelx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Angle X:"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="130dp"
        android:text="Angle X:"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labely"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Angle Y:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelx" />

    <TextView
        android:id="@+id/labely2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Angle Y:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelx2" />

    <TextView
        android:id="@+id/labelz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Angle Z:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labely" />

    <TextView
        android:id="@+id/labelz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Angle Z:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labely2" />

    <TextView
        android:id="@+id/angleX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:text="0,0"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/labelx"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/angleY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:text="0,0"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/labely"
        app:layout_constraintTop_toBottomOf="@+id/angleX" />

    <TextView
        android:id="@+id/angleZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:text="0,0"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/labelz"
        app:layout_constraintTop_toBottomOf="@+id/angleY" />

    <TextView
        android:id="@+id/aberrationX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="130dp"
        android:text="0,0"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/labelx2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aberrationY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:text="0,0"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/labely2"
        app:layout_constraintTop_toBottomOf="@+id/aberrationX" />

    <TextView
        android:id="@+id/aberrationZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:text="0,0"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/labelz2"
        app:layout_constraintTop_toBottomOf="@+id/aberrationY" />

    <Button
        android:id="@+id/jogButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="10dp"
        android:background="#ff2424"
        android:text="Start Jogging"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/checkBoxX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:checked="false"
        android:tag="x"
        android:text="X"
        android:textColorLink="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelz2" />

    <CheckBox
        android:id="@+id/checkBoxY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:tag="y"
        android:text="Y"
        app:layout_constraintStart_toEndOf="@+id/checkBoxX"
        app:layout_constraintTop_toBottomOf="@+id/labelz2" />

    <CheckBox
        android:id="@+id/checkBoxZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:tag="z"
        android:text="Z"
        app:layout_constraintStart_toEndOf="@+id/checkBoxY"
        app:layout_constraintTop_toBottomOf="@+id/aberrationZ" />


</android.support.constraint.ConstraintLayout>